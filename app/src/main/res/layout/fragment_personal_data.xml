<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/md_white_1000">

                <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:text="About"
                        android:textColor="@color/primary_text"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:text="Birthday"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="12sp"
                        android:text="Padang, December 20, 1993 (22 years old)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:text="Gender"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="12sp"
                        android:text="Male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:text="Full Name"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="12sp"
                        android:text="Adri Maning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:text="Nationality"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="12sp"
                        android:text="Indonesian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/md_white_1000">

                <LinearLayout
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                        android:text="Work &amp; Education"
                        android:textColor="@color/primary_text"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:textColor="@color/primary_text"
                            android:textSize="14sp"
                            android:text="People Type"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:gravity="right"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:text="Employee"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:textColor="@color/primary_text"
                            android:textSize="14sp"
                            android:text="Organization"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:gravity="right"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:text="Solok Recovery"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:textColor="@color/primary_text"
                            android:textSize="14sp"
                            android:text="Location"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:gravity="right"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:text="Solok"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:textColor="@color/primary_text"
                            android:textSize="14sp"
                            android:text="Job"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:gravity="right"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:text="Recovery Section Head"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:textColor="@color/primary_text"
                            android:textSize="14sp"
                            android:text="Job Group"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:gravity="right"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:text="Recovery Section Head"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/newline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:textColor="@color/primary_text"
                            android:textSize="14sp"
                            android:text="Personal Grade"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                            android:gravity="right"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:text="Assistant Manager"
                            android:layout_weight="0.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:background="@drawable/button_normal_small_radius"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <com.mobile.hcms.widgets.textview.TextViewLatoRegular
                    android:textSize="17sp"
                    android:text="View Complete Profile"
                    android:textColor="@color/md_white_1000"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>
        
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>